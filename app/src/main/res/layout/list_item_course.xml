<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#4285F4"> <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tvCourseCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:text="CS101" android:textColor="@android:color/white" android:textSize="18sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />
    <TextView android:id="@+id/tvCourseName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Introduction to Computer Science" android:textColor="#E0E0E0" android:textSize="14sp" app:layout_constraintStart_toStartOf="@id/tvCourseCode" app:layout_constraintTop_toBottomOf="@id/tvCourseCode" />
    <TextView android:id="@+id/tvStudents" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:text="45 students" android:textColor="#E0E0E0" android:textSize="12sp" app:layout_constraintBottom_toBottomOf="@id/iconStudents" app:layout_constraintStart_toEndOf="@id/iconStudents" app:layout_constraintTop_toTopOf="@id/iconStudents" />
    <TextView android:id="@+id/tvSessions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:text="0 sessions" android:textColor="#E0E0E0" android:textSize="12sp" app:layout_constraintBottom_toBottomOf="@id/iconSessions" app:layout_constraintStart_toEndOf="@id/iconSessions" app:layout_constraintTop_toTopOf="@id/iconSessions" />

    <Button android:id="@+id/btnRollCall" style="?attr/borderlessButtonStyle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:text="Roll Call" android:textColor="@android:color/white" android:textAllCaps="false" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView android:id="@+id/tvPercentage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="16dp" android:background="@drawable/badge_blue" android:paddingStart="8dp" android:paddingTop="4dp" android:paddingEnd="8dp" android:paddingBottom="4dp" android:text="87%" android:textColor="@android:color/white" android:textSize="12sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@id/tvCourseCode" />
    <ImageButton android:id="@+id/btnEditCourse" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginEnd="8dp" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Edit Course" android:src="@android:drawable/ic_menu_edit" app:layout_constraintBottom_toBottomOf="@id/tvPercentage" app:layout_constraintEnd_toStartOf="@id/tvPercentage" app:layout_constraintTop_toTopOf="@id/tvPercentage" app:tint="@android:color/white" />
    <ImageView android:id="@+id/iconStudents" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="8dp" android:contentDescription="Students Icon" android:src="@android:drawable/ic_menu_myplaces" app:layout_constraintStart_toStartOf="@id/tvCourseName" app:layout_constraintTop_toBottomOf="@id/tvCourseName" app:tint="@android:color/white" />
    <ImageView android:id="@+id/iconSessions" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="16dp" android:contentDescription="Sessions Icon" android:src="@android:drawable/ic_menu_today" app:layout_constraintBottom_toBottomOf="@id/tvStudents" app:layout_constraintStart_toEndOf="@id/tvStudents" app:layout_constraintTop_toTopOf="@id/tvStudents" app:tint="@android:color/white" />
    <View android:id="@+id/divider" android:layout_width="0dp" android:layout_height="1dp" android:layout_marginTop="16dp" android:background="#66FFFFFF" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/iconStudents" />

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>